{
  "name": "citizen-hangar-pledge-sync",
  "description": "Citizen Hangar Pledge Sync extension",
  "private": true,
  "version": "1.3.0",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "release:prepare": "wxt build && wxt build -b firefox && wxt zip && wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "postinstall": "wxt prepare"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "wxt": "^0.20.6"
  }
}
