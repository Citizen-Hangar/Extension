{
  "manifest_version": 3,
  "name": "Citizen Hangar Pledge Sync",
  "version": "1.2.0",
  "description": "Syncs RSI pledge data with the Citizen Hangar dashboard using a secure pairing code (dev/prod toggle, debug logs).",
  "icons": {
    "16": "icons/125x125.png",
    "48": "icons/125x125.png",
    "128": "icons/125x125.png"
  },
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "https://citizenhangar.space/*",
    "https://*.citizenhangar.space/*",
    "https://robertsspaceindustries.com/*",
    "http://localhost:3000/*",
    "https://localhost:3000/*",
    "http://127.0.0.1:3000/*",
    "https://127.0.0.1:3000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "citizenhangar@sctr.space",
      "data_collection_permissions": {
        "required": [
          "authenticationInfo",
          "browsingActivity",
          "websiteContent"
        ]
      }
    }
  },
  "action": {
    "default_icon": "icons/500x500.png",
    "default_title": "Citizen Hangar Pledge Sync",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://robertsspaceindustries.com/*",
        "https://citizenhangar.space/*",
        "http://localhost:3000/*",
        "https://localhost:3000/*",
        "http://127.0.0.1:3000/*",
        "https://127.0.0.1:3000/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "incognito": "not_allowed",
  "homepage_url": "https://citizenhangar.space/"
}
